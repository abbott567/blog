<div>
  <dl>
    <div class="article-info">
      <dt>
        Published:
      </dt>
      <dd>
        <time datetime="{{post.date.datestamp}}">
          {{post.date.pretty}}
        </time>
      </dd>
    </div>

    <div class="article-info">
      <dt>
        Read time:
      </dt>
      <dd>
        {{post.readTime}}
      </dd>
    </div>
  </dl>
</div>
