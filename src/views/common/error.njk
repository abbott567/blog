{% extends '../common/layout.njk' %}
{% set pageTitle = "Error" %}

{% block content %}
  <main class="container" id="main" role="main" tabindex="-1">
    <div class="grid-row" role="alert">
      <div class="column-two-thirds">
        <h1 class="heading-large">
          {{err.heading}}
        </h1>
        <p>
          {{err.message}}
        </p>
      </div>
    </div>
  </main>

  {% if dev %}
    <pre>
      {{err.stack}}
    </pre>
    <pre>
      {{err|dump(2)}}
    </pre>
  {% endif %}
{% endblock %}